{
    "rules": [
        {
            "id": "@secretlint/secretlint-rule-preset-recommend"
        },
        {
            "id": "@secretlint/secretlint-rule-pattern",
            "options": {
                "patterns": [
                    {
                        "name": "General Secret",
                        "pattern": "/((key|api(?!Version)|token|secret|password|auth)[\\w .,-]{0,})([=>:]|:=|\\|\\|:|<=|=>)[\\s\\t]{0,}['\"][^\\[](.{1,})[^\\]]['\"]/gi"
                    }
                ]
            }
        }
    ]
}